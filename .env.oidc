# OIDC Configuration for Keycloak
# Copy this to .env or use: docker compose --env-file .env.oidc -f docker-compose.yml -f docker-compose.oidc.yml up

# Disable dev mode to use OIDC authentication
DEV_MODE=false

# Keycloak OIDC settings
OIDC_ISSUER_URL=http://keycloak:8080/realms/retrotro
OIDC_CLIENT_ID=retrotro-app
OIDC_CLIENT_SECRET=retrotro-secret
OIDC_REDIRECT_URL=http://localhost:8081/auth/callback

# JIT (Just-In-Time) Provisioning
OIDC_JIT_ENABLED=true
OIDC_JIT_GROUPS_CLAIM=groups
OIDC_JIT_DEFAULT_ROLE=member
OIDC_JIT_ADMIN_GROUPS=admins
OIDC_JIT_SYNC_ON_LOGIN=true
OIDC_JIT_REMOVE_STALE_MEMBERS=false

# JWT settings
JWT_SECRET=change-me-in-production-with-a-long-random-string

# Logging
LOGGER_LEVEL=debug
LOGGER_FORMAT=txt
