# Server
PORT=8080

# Database
DATABASE_URL=postgres://retrotro:retrotro@localhost:5432/retrotro?sslmode=disable

# CORS
CORS_ORIGINS=http://localhost:3000

# Development mode (enables dev login endpoints)
DEV_MODE=false

# Logging
LOGGER_LEVEL=info    # debug, info, warn, error
LOGGER_FORMAT=txt    # txt, json
FX_LOGS=false        # enable/disable fx framework logs

# JWT
JWT_SECRET=change-me-in-production
JWT_ACCESS_TOKEN_TTL=15      # minutes
JWT_REFRESH_TOKEN_TTL=168    # hours (7 days)

# OIDC (OpenID Connect)
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URL=http://localhost:8080/auth/callback
OIDC_SCOPES=openid,profile,email,groups

# OIDC JIT (Just-In-Time) Provisioning
OIDC_JIT_ENABLED=true
OIDC_JIT_GROUPS_CLAIM=groups
OIDC_JIT_GROUPS_PREFIX=
OIDC_JIT_DEFAULT_ROLE=participant
OIDC_JIT_ADMIN_GROUPS=
OIDC_JIT_FACILITATOR_GROUPS=
OIDC_JIT_SYNC_ON_LOGIN=true
OIDC_JIT_REMOVE_STALE_MEMBERS=false
