# Database
DATABASE_URL=postgres://retrotro:retrotro@localhost:5432/retrotro?sslmode=disable

# Server
PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Logging
LOGGER_LEVEL=info  # debug, info, warn, error
LOGGER_FORMAT=txt  # txt, json

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_TTL=15
JWT_REFRESH_TOKEN_TTL=168

# OIDC Configuration
OIDC_ISSUER_URL=https://your-idp.example.com
OIDC_CLIENT_ID=retrotro
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URL=http://localhost:8080/auth/callback
OIDC_SCOPES=openid,profile,email,groups

# OIDC JIT Provisioning
OIDC_JIT_ENABLED=true
OIDC_JIT_GROUPS_CLAIM=groups
OIDC_JIT_GROUPS_PREFIX=
OIDC_JIT_DEFAULT_ROLE=participant
OIDC_JIT_ADMIN_GROUPS=retrotro-admins
OIDC_JIT_FACILITATOR_GROUPS=scrum-masters
OIDC_JIT_SYNC_ON_LOGIN=true
OIDC_JIT_REMOVE_STALE_MEMBERS=false
